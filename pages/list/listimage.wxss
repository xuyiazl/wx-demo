.ui-list-image{
    overflow: auto;
    margin: 20rpx -60rpx 0 20rpx;
}
.ui-list-image .item{
    box-sizing: border-box;
    width:33.33333333333336%;
    padding: 20rpx;
    margin-left: -20rpx;
    margin-top: -20rpx;
    float: left;
}
.ui-list-image .item .picture{
    width: 100%;
    height: 160rpx;
    display: block;
}
.ui-list-image .item .name{
    margin-top:20rpx;
    font-size: 32rpx;
	line-height: 1.2;
    text-align: left;
    display: block;
    white-space:inherit;
    text-overflow: ellipsis;
    overflow: hidden;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}
.ui-list-image.column2{
    margin-right: -40rpx;
}
.ui-list-image.column2 .item{
    width:50%;
}
.ui-list-image.column2 .item .picture{
    height:200rpx;
}
.ui-list-image.column3{
    margin-right: -60rpx;
}
.ui-list-image.column3 .item{
    width:33.33333333333336%;    
}
.ui-list-image.column3 .item .picture{
    height:160rpx;
}
.ui-list-image.column4{
    margin-right: -80rpx;
}
.ui-list-image.column4 .item{
    width:25%;
}
.ui-list-image.column4 .item .picture{
    height:120rpx;
}
/*scrollview 横向切换*/
.scroll-view-h{
    white-space: nowrap;
    width:100%;
}
.scroll-view-h .ui-list-image{
    width: auto;
    white-space: nowrap;
}
.scroll-view-h .ui-list-image .item{
    display: inline-block;
    float:inherit;
}