<view class="container">
    <view class="block">
        <view class="row">
            <view class="cloumn">
                <swiper indicator-dots="{{indicatorDots}}"
                autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
                <block wx:for="{{swiperData}}">
	                <swiper-item class="swiper-item">
                        <navigator url="{{item.url}}">
                            <image src="{{item.img}}"/>
                            <text>{{item.text}}</text>
	                    </navigator>
	                </swiper-item>
                </block>
                </swiper>
            </view>
        </view>
        <view class="row center margin">
            <block wx:for-items="{{navlist}}">
                <view class="cloumn">
                    <navigator url="{{item.url}}">
                        <view class="nav-item">
                            <image src="{{item.icon}}"></image>
                            <text>{{item.text}}</text>
                        </view>
                    </navigator>
                </view>
            </block>
        </view>
        <view class="roll row vcenter">
            <view class="left">
                <text>头条</text>
	        </view>
            <view class="right cloumn">
	            <view animation="{{rollAnimation}}">
                    <block wx:for-items="{{rollData}}">
                        <navigator url="{{item.url}}">
                            <view class="item">
                                <text>·</text>{{item.text}}
                            </view>
                        </navigator>
                    </block>
                </view>
            </view>
        </view>
        <view class="line-b"></view>
    </view>
    <view class="block margin">
        <view class="header">
	        <view>热门新闻</view>
	        <navigator class="more" url="#">更多</navigator>
	    </view>
        <view class="body">
            <view class="ui-list-image cloumn2" style="margin-top:0;">
                <block wx:for-items="{{list1}}">
                    <navigator id="{{item.id}}" url="{{item.url}}" class="item">
                        <view>
                            <image class="picture" src="{{item.img}}" mode="aspectFill" />
                            <text class="name">{{item.title}}</text>
                        </view>
                    </navigator>
                </block>
            </view>
        </view>
        <view class="line-t"></view>
        <view class="line-b"></view>
    </view>
    <view class="block margin">
        <view class="header">
	        <view>左右切换</view>
	        <navigator class="more" url="#">更多</navigator>
	    </view>
        <view class="body">
            <scroll-view scroll-x="true" class="scroll-view-h">
                <view class="ui-list-image cloumn2" style="margin-top:0;">
                    <block wx:for-items="{{list1}}">
                        <navigator id="{{item.id}}" url="{{item.url}}" class="item">
                            <view>
                                <image class="picture" src="{{item.img}}" mode="aspectFill" />
                            </view>
                        </navigator>
                    </block>
                </view>
            </scroll-view>
        </view>
        <view class="line-t"></view>
        <view class="line-b"></view>
    </view>
    <view class="block">
        <view class="header">
	        <view>热门新闻</view>
	        <navigator class="more" url="#">更多</navigator>
	    </view>
        <view class="body">
            <view class="ui-list ui-list-media">
                <block wx:for-items="{{list2}}">
                    <navigator id="{{item.id}}" url="{{item.url}}" class="item">
                        <view class="cell">
                            <view class="cell-hd">
                                <image class="picture" src="{{item.img}}" mode="aspectFill" />
                            </view>
                            <view class="cell-bd">
                                <text class="name">{{item.title}}</text>
                                <view class="remark">
                                    <text>{{item.source}}</text>
                                    <text>{{item.time}}</text>
                                    <text class="extra">其他信息</text>
                                </view>
                            </view>
                        </view>
                        <view class="line-t {{index == 0 ? 'first' : ''}}"></view>
                    </navigator>
                </block>
            </view>
        </view>
    </view>
</view>